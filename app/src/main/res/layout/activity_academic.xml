<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcademicActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Select Your Branch"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        />
     <Button
         android:layout_width="80dp"
         android:layout_height="wrap_content"
         android:id="@+id/btn_cse"
         android:background="@drawable/btn_rounded"
         android:text="cse"
         android:textSize="20dp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="60dp"
         android:layout_below="@id/text"
         />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ce"
        android:background="@drawable/btn_rounded"
        android:text="ce"
        android:textSize="20dp"
        android:layout_toRightOf="@id/btn_cse"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/text"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_me"
        android:background="@drawable/btn_rounded"
        android:text="me"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/btn_cse"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ee"
        android:background="@drawable/btn_rounded"
        android:text="ee"
        android:textSize="20dp"
        android:layout_toRightOf="@id/btn_cse"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btn_ce"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ec"
        android:background="@drawable/btn_rounded"
        android:text="ec"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/btn_me"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ei"
        android:background="@drawable/btn_rounded"
        android:text="ei"
        android:textSize="20dp"
        android:layout_toRightOf="@id/btn_cse"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btn_ee"
        />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/chatbot"
        android:id="@+id/chatbot"
        android:clickable="true"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="250dp"/>

</RelativeLayout>